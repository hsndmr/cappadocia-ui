{
  "name": "cappadocia-ui",
  "version": "0.0.2",
  "description": "Cappadocia UI is a React UI library built with TailwindCSS",
  "files": [
    "./lib/",
    "plugin.js"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "scripts": {
    "build": "rm -rf ./lib/ && yarn build:lib:esm && yarn build:lib:cjs",
    "build:lib:cjs": "tsc -p tsconfig.lib.json",
    "build:lib:esm": "tsc -p tsconfig.lib.json --module esnext --declaration --outDir ./lib/esm",
    "lint": "eslint --color .",
    "prettier:fix": "prettier --write .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:open": "vitest --ui",
    "dev": "tsc -p tsconfig.doc.json && vite",
    "build:docs": "tsc -p tsconfig.doc.json && vite build",
    "prepare": "husky install",
    "release": "release-it"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.4",
    "@commitlint/config-conventional": "^17.6.1",
    "@storybook/addon-docs": "^7.0.7",
    "@storybook/addon-essentials": "^7.0.7",
    "@storybook/addon-interactions": "^7.0.7",
    "@storybook/addon-links": "^7.0.7",
    "@storybook/addon-mdx-gfm": "^7.0.7",
    "@storybook/addon-styling": "^1.0.3",
    "@storybook/blocks": "^7.0.7",
    "@storybook/react": "^7.0.7",
    "@storybook/react-webpack5": "^7.0.7",
    "@storybook/testing-library": "^0.1.0",
    "@testing-library/dom": "^9.2.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^18.15.13",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.0.11",
    "@types/react-syntax-highlighter": "^15.5.6",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-c8": "^0.30.1",
    "@vitest/ui": "^0.30.1",
    "autoprefixer": "^10.4.14",
    "commitlint": "^17.6.1",
    "eslint": "^8.39.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.11",
    "husky": "^8.0.3",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.1",
    "postcss": "^8.4.23",
    "postcss-loader": "^7.2.4",
    "prettier": "^2.8.7",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-element-to-jsx-string": "^15.0.0",
    "react-icons": "^4.8.0",
    "react-router-dom": "^6.11.0",
    "react-syntax-highlighter": "^15.5.0",
    "release-it": "^15.10.2",
    "storybook": "^7.0.7",
    "storybook-dark-mode": "^3.0.0",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.1",
    "vitest": "^0.30.1"
  },
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18",
    "tailwindcss": "^3"
  },
  "dependencies": {
    "classnames": "^2.3.2"
  }
}
